
<div>

  <h2>Editar Diagnostico</h2>
  <div id="borde">
    {{#each tasks}}
    <form action="" method="POST" class="mt-4">

      {{!-- <input type="number" placeholder="Codigo Diagnostico" name="COD_DIAGNOSTICO" value="{{COD_DIAGNOSTICO}}"required pattern="[0-9]+"></input> --}}

      <input type="text" placeholder="Tipo de Diagnostico" name="TIP_DIAGNOSTICO" value="{{TIP_DIAGNOSTICO}}" required pattern="[a-zA-Z]{5,50}" title="Solo se permite texto. Tamaño mínimo: 5. Tamaño máximo: 50" ></input>

      <input type="text" placeholder="Descripcion de Diagnostico" name="DES_DIAGNOSTICO" value="{{DES_DIAGNOSTICO}}" pattern="[A-Za-z0-9]+{5,255}" title="Tamaño máximo: 255"></input>

      <button id="btnSummit" type="submit">Send</button>

    </form>
    {{/each}}
  </div>
</div> 

