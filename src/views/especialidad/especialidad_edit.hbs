<div>

  <h2>Editar Especialidad</h2>
  <div id="borde">
    {{#each tasks}}
    <form action="" method="POST" class="mt-4">

      {{!-- <input type="number" placeholder="Codigo Especialidad" name="COD_ESPECIALIDAD" value="{{COD_ESPECIALIDAD}}" required pattern="[0-9]+"></input>--}} 

      <input type="number" placeholder="Codigo  Personal" name="COD_PERSONAL" value="{{COD_PERSONAL}}" required pattern="[0-9]+"></input>

