<div>
  <h2>Expediente</h2>
  <div id="borde">
    {{#each tasks}}
    <form  action="" method="POST" class="row g-3">

      {{!-- <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
        p-2 my-2 focus:bg-white" placeholder="Task Id" name="Id"> --}}
      {{!-- <h5>Expediente</h5>
      <input type="hidden" placeholder="Código del Expediente" name="COD_EXPEDIENTE" value="{{COD_EXPEDIENTE}}"></input> --}}

      <h5>Paciente</h5>
      <div class="col-md-6">
        <label for="COD_PACIENTE" class="form-label"> Codigo de Paciente</label>      
        <input disabled class="form-control" type="text" placeholder="Código de Paciente" id= "COD_PACIENTE" name="COD_PACIENTE" value="{{COD_PACIENTE}}"autofocus></input>  
      </div>
      
      <div class="col-md-6">
        <label for="NUM_IDENTIDAD" class="form-label"> Numero de Identidad</label>      
        <input disabled class="form-control" type="number" placeholder="Número de Identidad" id="NUM_IDENTIDAD" name="NUM_IDENTIDAD" value="{{NUM_IDENTIDAD}}"autofocus></input>
      </div>
      
      <div class="col-md-6">
        <label for="NOM_PACIENTE" class="form-label"> Nombre del Paciente</label>      
        <input disabled class="form-control" type="text" placeholder="Nombre del Paciente" id="NOM_PACIENTE" name="NOM_PACIENTE" value="{{NOM_PACIENTE}}" autofocus></input>
      </div>
      
      <div class="col-md-6">
        <label for="FEC_NACIMIENTO" class="form-label"> Fecha de Nacimiento</label>      
        <input disabled class="form-control" type="date" placeholder="Fecha de Nacimiento" id="FEC_NACIMIENTO" name="FEC_NACIMIENTO" value="{{FEC_NACIMIENTO}}"></input>
      </div>
      
      <div class="col-md-6">
        <label for="DIR_DOMICILIO" class="form-label"> Direccion</label>      
        <input disabled class="form-control" type="text" placeholder="Dirección de Domicilio" id="DIR_DOMICILIO" name="DIR_DOMICILIO" value="{{DIR_DOMICILIO}}"></input>
      </div>
      <div class="col-md-6">
        <label for="DIR_CORREO_ELECTRONICO" class="form-label"> Correo Electronico</label>      
        <input disabled class="form-control" type="text" placeholder="Correo Electrónico" id="DIR_CORREO_ELECTRONICO" name="DIR_CORREO_ELECTRONICO" value="{{DIR_CORREO_ELECTRONICO}}"></input>
      </div>

      <div class="col-md-6">
        <label for="NUM_TELEFONO" class="form-label"> No. Telefono</label>      
        <input disabled class="form-control" type="tel" pattern="[0-9]{8}" placeholder="Teléfono" id="NUM_TELEFONO" name="NUM_TELEFONO" value="{{NUM_TELEFONO}}"></input>
      </div>

      <div class="col-md-6">
        <label for="GENERO" class="form-label"> Genero</label>      
        <input disabled class="form-control" type="text" placeholder="Genero" id="GENERO" name="GENERO" value="{{GENERO}}"></input>
      </div>

      <div class="col-md-6">
        <label for="OCUPACION" class="form-label"> Ocupacion</label>      
        <input disabled class="form-control" type="text" placeholder="Ocupación" id="OCUPACION" name="OCUPACION" value="{{OCUPACION}}"></input> 
      </div>
      
      

      <button id="btnCancel"><a href="/expediente_paciente">Cancelar</a></button>
    </form>
    {{/each}}
  </div>
</div>