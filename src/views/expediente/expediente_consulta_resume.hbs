<div>
  <h2>Detalle de Consulta</h2>
  <div>
    <div id="divNew">
      <a href="/expediente_paciente">Nuevo Expediente
      <button id="new"><i class="fas fa-plus-circle"></i></button></a>
    </div>
    <div id="tabla">
      <table>
        <thead>
          <tr>
            <th class="m-2">No. Expediente</th>
            <th class="m-2">Fecha de Expediente</th>
            <th class="m-2">Tipo de Consulta</th>
            <th class="m-2">Clinica</th>
            <th class="m-2">Eliminar</th>
            {{!-- <th class="m-2">Modificar</th> --}}
            <th class="m-2">Nueva Consulta</th>
          </tr>
        </thead>
        <tbody>
          <div class="row">
            {{#each rows}}
            <tr>
              <td>{{COD_EXPEDIENTE}}</td>
              <td>{{FEC_CONSULTA}}</td>
              <td>{{TIP_CONSULTA}}</td>
              <td>{{COD_CLINICA}}</td>

              
              {{!-- <td type="date" class="m-2">{{FEC_MODIFICACION}}</td> --}}
            
              <td id="actions">
                  <form action="/expediente/delete" method="POST" class="mx-2">
                    <input type="hidden" value="{{COD_EXPEDIENTE}}" name="id">
                    <button id="trash" type="submit"><i class="fas fa-trash"></i></button>
                  </form>
                </td>
                {{!-- <td>
                  <a href="/expediente/expediente_edit/{{COD_EXPEDIENTE}}">
                  <button id="edit"><i class="fas fa-pen"></i></button></a>
                </td> --}}
                <td>
                  <a href="/expediente/expediente_consulta/{{COD_EXPEDIENTE}}" >
                  <button id="select"><i class="fas fa-check"></i></button></a>
                </td>
              </td>
            </tr>
            {{/each}}
          </div>
        </tbody>
      </table>
    </div> 
  </div>
</div>