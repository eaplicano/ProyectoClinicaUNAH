
<div>

  <h2>Pre-Clinica (Signo Vitales)</h2>
  <div id="borde">
    {{#each tasks}}
    <form action="" method="POST" class="mt-4">

      <input type="number" placeholder="Codigo Signos Vitales" name="COD_EXPEDIENTE" value="{{COD_EXPEDIENTE}}"></input>

      <input type="number" placeholder="Codigo Signos Vitales" name="TIP_CAONSULTA" value="{{TIP_CAONSULTA}}"></input>

      <input type="text" placeholder="Tipo de Signo Vital" name="FEC_CONSULTA" value="{{FEC_CONSULTA}}"></input>

      <input type="text" placeholder="Descripcion de Signo Vital" name="COD_CLINICA" value="{{COD_CLINICA}}"></input>

      <button id="btnSummit" type="submit">Send</button>

    </form>
    {{/each}}
  </div>
</div>

