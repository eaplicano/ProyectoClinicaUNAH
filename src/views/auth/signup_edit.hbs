<div class="container p-4">
  <div class="row">
    <div class="col-md-7 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>SignUp</h3>
        </div>
        {{#each tasks}}
        <div class="card-body">
          <form action="" method="POST">
            <div class="form-group">
              <input type="hidden" name="user_session" placeholder="" class="form-control" value="{{user.USUARIO}}" autofocus>
            </div>
            <div class="form-group">
              <input type="type" name="NOM_USUARIO" placeholder="Nombre Completo" class="form-control" value="{{NOM_USUARIO}}" autofocus>
            </div>
            <div class="form-group">
              <input type="text" name="USUARIO" placeholder="Nombre del Usuario" class="form-control"value="{{USUARIO}}">
            </div>
            <div class="form-group">
              <input type="type" name="EST_USUARIO" placeholder="Estado del Usuario" class="form-control" value="{{EST_USUARIO}}"autofocus>
            </div>
            <div class="form-group">
              <input type="type" name="DIR_CORREO_ELECTRONICO" placeholder="Correo Electronico" class="form-control" value="{{DIR_CORREO_ELECTRONICO}}" autofocus>
            </div>
            <div class="form-group">
              <input type="type" name="COD_ROL" placeholder="Rol" class="form-control" value="{{COD_ROL}}" autofocus>
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">
                SingIn
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>